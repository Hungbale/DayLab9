@model IEnumerable<Test4.Models.SanPham>

@{
    ViewData["Title"] = "Danh sách sản phẩm";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary"><i class="bi bi-box-seam"></i> Danh sách sản phẩm</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Thêm sản phẩm
        </a>
    </div>

    <table class="table table-bordered table-striped align-middle text-center shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.MaSanPham)</th>
                <th>@Html.DisplayNameFor(model => model.TenSanPham)</th>
                <th>@Html.DisplayNameFor(model => model.HinhAnh)</th>
                <th>@Html.DisplayNameFor(model => model.SoLuong)</th>
                <th>@Html.DisplayNameFor(model => model.DonGia)</th>
                <th>Loại sản phẩm</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.MaSanPham</td>
                    <td>@item.TenSanPham</td>

                    <td>
                        @if (!string.IsNullOrEmpty(item.HinhAnh))
                        {
                            <img src="@Url.Content("~/img/" + item.HinhAnh)" alt="Ảnh sản phẩm"
                                 width="70" height="70" class="rounded shadow-sm" />
                        }
                        else
                        {
                            <span class="text-muted fst-italic">Không có ảnh</span>
                        }
                    </td>

                    <td>@item.SoLuong</td>
                    <td>@item.DonGia.ToString("N0") ₫</td>
                    <td>@item.Loai_San_Pham?.TenLoai</td>

                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-1">
                            <i class="bi bi-pencil-square"></i> Sửa
                        </a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info me-1 text-white">
                            <i class="bi bi-eye"></i> Xem
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                            <i class="bi bi-trash"></i> Xóa
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Thêm Bootstrap Icons nếu chưa có -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
