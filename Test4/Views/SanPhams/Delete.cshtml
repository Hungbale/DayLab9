@model Test4.Models.SanPham

@{
    ViewData["Title"] = "Xóa sản phẩm";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-danger text-white">
            <h3 class="mb-0"><i class="bi bi-trash-fill"></i> Xác nhận xóa sản phẩm</h3>
        </div>

        <div class="card-body">
            <div class="alert alert-warning">
                <strong>Bạn có chắc chắn muốn xóa sản phẩm này không?</strong>
                <br />Hành động này không thể hoàn tác.
            </div>

            <dl class="row">
                <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.MaSanPham)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.MaSanPham)</dd>

                <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.TenSanPham)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.TenSanPham)</dd>

                <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.HinhAnh)</dt>
                <dd class="col-sm-9">
                    @if (!string.IsNullOrEmpty(Model.HinhAnh))
                    {
                        <img src="~/images/@Model.HinhAnh" alt="@Model.TenSanPham" class="img-thumbnail" style="max-width:150px;" />
                    }
                    else
                    {
                        <span class="text-muted fst-italic">Không có hình ảnh</span>
                    }
                </dd>

                <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.SoLuong)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.SoLuong)</dd>

                <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.DonGia)</dt>
                <dd class="col-sm-9">@String.Format("{0:N0}₫", Model.DonGia)</dd>

                <dt class="col-sm-3 fw-bold">Loại sản phẩm</dt>
                <dd class="col-sm-9">@Model.Loai_San_Pham?.TenLoai</dd>
            </dl>

            <form asp-action="Delete" class="text-end mt-4">
                <input type="hidden" asp-for="Id" />
                <a asp-action="Index" class="btn btn-secondary me-2">
                    <i class="bi bi-arrow-left"></i> Quay lại
                </a>
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Xóa sản phẩm
                </button>
            </form>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
