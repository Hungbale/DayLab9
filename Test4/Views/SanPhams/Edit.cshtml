@model Test4.Models.SanPham

@{
    ViewData["Title"] = "Chỉnh sửa sản phẩm";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-warning text-white">
            <h3 class="mb-0"><i class="bi bi-pencil-square"></i> Chỉnh sửa thông tin sản phẩm</h3>
        </div>

        <div class="card-body">
            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="Id" />

                <div class="row">
                    <!-- Cột trái: ảnh -->
                    <div class="col-md-4 text-center">
                        <div class="mb-3">
                            @if (!string.IsNullOrEmpty(Model.HinhAnh))
                            {
                                <img src="~/images/@Model.HinhAnh" alt="@Model.TenSanPham"
                                     class="img-fluid rounded shadow-sm mb-3" style="max-height: 250px;" />
                            }
                            else
                            {
                                <div class="border p-5 text-muted bg-light rounded mb-3">
                                    <i class="bi bi-image" style="font-size: 3rem;"></i><br />
                                    Không có hình ảnh
                                </div>
                            }

                            <label asp-for="HinhAnh" class="form-label fw-bold">Cập nhật hình ảnh</label>
                            <input asp-for="HinhAnh" class="form-control" placeholder="Nhập tên file hoặc URL ảnh" />
                            <span asp-validation-for="HinhAnh" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Cột phải: thông tin -->
                    <div class="col-md-8">
                        <div class="mb-3">
                            <label asp-for="MaSanPham" class="form-label fw-bold"></label>
                            <input asp-for="MaSanPham" class="form-control" placeholder="Nhập mã sản phẩm" />
                            <span asp-validation-for="MaSanPham" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="TenSanPham" class="form-label fw-bold"></label>
                            <input asp-for="TenSanPham" class="form-control" placeholder="Nhập tên sản phẩm" />
                            <span asp-validation-for="TenSanPham" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="SoLuong" class="form-label fw-bold"></label>
                            <input asp-for="SoLuong" class="form-control" type="number" min="0" />
                            <span asp-validation-for="SoLuong" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DonGia" class="form-label fw-bold"></label>
                            <input asp-for="DonGia" class="form-control" type="number" step="1000" />
                            <span asp-validation-for="DonGia" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="LoaiSanPhamId" class="form-label fw-bold">Loại sản phẩm</label>
                            <select asp-for="LoaiSanPhamId" class="form-select" asp-items="ViewBag.LoaiSanPhamId">
                                <option value="">-- Chọn loại sản phẩm --</option>
                            </select>
                            <span asp-validation-for="LoaiSanPhamId" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="text-end mt-4">
                    <button type="submit" class="btn btn-success me-2">
                        <i class="bi bi-check-circle"></i> Lưu thay đổi
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Quay lại danh sách
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
