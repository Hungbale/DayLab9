@model Test4.Models.SanPham

@{
    ViewData["Title"] = "Chi tiết sản phẩm";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0"><i class="bi bi-box-seam"></i> Thông tin chi tiết sản phẩm</h3>
        </div>

        <div class="card-body">
            <div class="row">
                <!-- Ảnh sản phẩm -->
                <div class="col-md-4 text-center">
                    @if (!string.IsNullOrEmpty(Model.HinhAnh))
                    {
                        <img src="~/images/@Model.HinhAnh" alt="@Model.TenSanPham"
                             class="img-fluid rounded shadow-sm" style="max-height: 250px;" />
                    }
                    else
                    {
                        <div class="border p-5 text-muted bg-light rounded">
                            <i class="bi bi-image" style="font-size: 3rem;"></i><br />
                            Không có hình ảnh
                        </div>
                    }
                </div>

                <!-- Thông tin sản phẩm -->
                <div class="col-md-8">
                    <dl class="row mb-0">
                        <dt class="col-sm-4 fw-bold">Mã sản phẩm:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.MaSanPham)</dd>

                        <dt class="col-sm-4 fw-bold">Tên sản phẩm:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.TenSanPham)</dd>

                        <dt class="col-sm-4 fw-bold">Số lượng:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.SoLuong)</dd>

                        <dt class="col-sm-4 fw-bold">Đơn giá:</dt>
                        <dd class="col-sm-8">@String.Format("{0:N0}₫", Model.DonGia)</dd>

                        <dt class="col-sm-4 fw-bold">Loại sản phẩm:</dt>
                        <dd class="col-sm-8">@Model.Loai_San_Pham?.TenLoai</dd>
                    </dl>
                </div>
            </div>
        </div>

        <div class="card-footer text-end">
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning me-2">
                <i class="bi bi-pencil-square"></i> Sửa
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Quay lại danh sách
            </a>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
