@model Test4.Models.SanPham

@{
    ViewData["Title"] = "Thêm sản phẩm mới";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0"><i class="bi bi-plus-circle"></i> Thêm sản phẩm mới</h3>
        </div>
        <div class="card-body">
            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="MaSanPham" class="form-label fw-bold"></label>
                        <input asp-for="MaSanPham" class="form-control" placeholder="Nhập mã sản phẩm..." />
                        <span asp-validation-for="MaSanPham" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="TenSanPham" class="form-label fw-bold"></label>
                        <input asp-for="TenSanPham" class="form-control" placeholder="Nhập tên sản phẩm..." />
                        <span asp-validation-for="TenSanPham" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="SoLuong" class="form-label fw-bold"></label>
                        <input asp-for="SoLuong" class="form-control" placeholder="Số lượng tồn..." />
                        <span asp-validation-for="SoLuong" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="DonGia" class="form-label fw-bold"></label>
                        <input asp-for="DonGia" class="form-control" placeholder="Giá bán..." />
                        <span asp-validation-for="DonGia" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="LoaiSanPhamId" class="form-label fw-bold">Loại sản phẩm</label>
                        <select asp-for="LoaiSanPhamId" class="form-select" asp-items="ViewBag.LoaiSanPhamId">
                            <option value="">-- Chọn loại sản phẩm --</option>
                        </select>
                        <span asp-validation-for="LoaiSanPhamId" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="HinhAnh" class="form-label fw-bold"></label>
                        <input asp-for="HinhAnh" type="file" class="form-control" accept="image/*" />
                        <span asp-validation-for="HinhAnh" class="text-danger"></span>
                    </div>
                </div>

                <div class="mt-4 text-end">
                    <a asp-action="Index" class="btn btn-secondary me-2">
                        <i class="bi bi-arrow-left"></i> Quay lại
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-save"></i> Lưu sản phẩm
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
