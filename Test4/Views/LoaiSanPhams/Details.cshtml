@model Test4.Models.LoaiSanPham

@{
    ViewData["Title"] = "Chi tiết loại sản phẩm";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4><i class="bi bi-info-circle"></i> Thông tin chi tiết loại sản phẩm</h4>
        </div>

        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Mã loại</dt>
                <dd class="col-sm-9">@Model.MaLoai</dd>

                <dt class="col-sm-3">Tên loại</dt>
                <dd class="col-sm-9">@Model.TenLoai</dd>

                <dt class="col-sm-3">Trạng thái</dt>
                <dd class="col-sm-9">
                    @(Model.TrangThai ? "Hoạt động" : "Ngừng hoạt động")
                </dd>
            </dl>
        </div>

        <div class="card-footer d-flex justify-content-between">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning text-dark">
                <i class="bi bi-pencil-square"></i> Sửa
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Quay lại danh sách
            </a>
        </div>
    </div>
</div>
