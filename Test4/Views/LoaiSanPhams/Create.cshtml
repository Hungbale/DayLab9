@model Test4.Models.LoaiSanPham

@{
    ViewData["Title"] = "Thêm loại sản phẩm";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-primary text-white text-center">
                    <h4 class="mb-0"><i class="bi bi-plus-circle"></i> Thêm loại sản phẩm</h4>
                </div>

                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="MaLoai" class="form-label fw-semibold"></label>
                            <input asp-for="MaLoai" class="form-control" placeholder="Nhập mã loại..." />
                            <span asp-validation-for="MaLoai" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="TenLoai" class="form-label fw-semibold"></label>
                            <input asp-for="TenLoai" class="form-control" placeholder="Nhập tên loại sản phẩm..." />
                            <span asp-validation-for="TenLoai" class="text-danger"></span>
                        </div>

                        <div class="form-check mb-3">
                            <input class="form-check-input" asp-for="TrangThai" />
                            <label class="form-check-label fw-semibold" asp-for="TrangThai"></label>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Quay lại
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> Lưu lại
                            </button>
                        </div>
                    </form>
                </div>

                <div class="card-footer text-center text-muted small">
                    © 2025 - Quản lý sản phẩm
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
