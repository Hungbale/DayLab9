@model Test4.Models.LoaiSanPham

@{
    ViewData["Title"] = "Chỉnh sửa loại sản phẩm";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-warning text-dark">
            <h4><i class="bi bi-pencil-square"></i> Chỉnh sửa loại sản phẩm</h4>
        </div>

        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="MaLoai" class="form-label fw-bold"></label>
                    <input asp-for="MaLoai" class="form-control" placeholder="Nhập mã loại..." />
                    <span asp-validation-for="MaLoai" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="TenLoai" class="form-label fw-bold"></label>
                    <input asp-for="TenLoai" class="form-control" placeholder="Nhập tên loại..." />
                    <span asp-validation-for="TenLoai" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <input class="form-check-input" asp-for="TrangThai" />
                    <label class="form-check-label fw-bold" asp-for="TrangThai"></label>
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-save"></i> Lưu thay đổi
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Quay lại danh sách
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
