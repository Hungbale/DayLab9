@model Test4.Models.LoaiSanPham

@{
    ViewData["Title"] = "Xóa loại sản phẩm";
}

<div class="container mt-4">
    <div class="card border-danger shadow-sm">
        <div class="card-header bg-danger text-white">
            <h4><i class="bi bi-exclamation-triangle"></i> Xác nhận xóa loại sản phẩm</h4>
        </div>

        <div class="card-body">
            <p class="text-danger mb-4">Bạn có chắc chắn muốn xóa mục này không? Hành động này không thể hoàn tác.</p>

            <dl class="row">
                <dt class="col-sm-3">Mã loại</dt>
                <dd class="col-sm-9">@Model.MaLoai</dd>

                <dt class="col-sm-3">Tên loại</dt>
                <dd class="col-sm-9">@Model.TenLoai</dd>

                <dt class="col-sm-3">Trạng thái</dt>
                <dd class="col-sm-9">
                    @(Model.TrangThai ? "Hoạt động" : "Ngừng hoạt động")
                </dd>
            </dl>
        </div>

        <div class="card-footer d-flex justify-content-between">
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Xóa
                </button>
                <a asp-action="Index" class="btn btn-secondary ms-2">
                    <i class="bi bi-arrow-left"></i> Quay lại danh sách
                </a>
            </form>
        </div>
    </div>
</div>
